@import "application"

.home-container, .choice-container
	width: 100%
	margin: 0px

.home-hero-container
	width: 100%
	background: url(<%= asset_path('fresh-home.png') %>) no-repeat center
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: cover

.home-hero
	background-color: rgba(0, 0, 0, .15)
	height: 100%
	width: 100%
	text-align: center

.home-hero-wrapper
	padding: 260px 0px 180px 0px
	width: 100%

.hero-title
	font-size: 3em
	color: $white
	font-weight: 600
	padding: 0px 0px 50px 0px
	font-family: NexaRust

.home-search-container
	text-align: center
	font-size: 1em
	color: $white
	margin: 0px

.search-title
	width: 100%
	background-color: rgba(255, 255, 255, 1)
	margin: 0px
	padding: 10px
	color: $carbon
	font-family: NexaRust
	font-size: .9em
	text-align: center
	border-top: 2px solid $teal

.grid-search-container
	background-color: $carbon
	width: 100%
	border: 1px solid $white
	text-align: center
	padding: 75px 0px
	font-size: 1.75em
	color: $white
	font-family: NexaRust

[data-search-id="1"]
	background: url(<%= asset_path('chicken.png') %>) no-repeat center
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: 50% auto

	&:hover
		background-color: #c4b725
		transition: background-color .3s ease-out
		-webkit-transition: background-color .3s ease-out
		-moz-transition: background-color .3s ease-out
		-ms-transition: background-color .3s ease-out
		color: $white

[data-search-id="2"]
	background: url(<%= asset_path('beef.png') %>) no-repeat center
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: 50% auto

	&:hover
		background-color: #a40303
		transition: background-color .3s ease-out
		-webkit-transition: background-color .3s ease-out
		-moz-transition: background-color .3s ease-out
		-ms-transition: background-color .3s ease-out
		color: $white

[data-search-id="3"]
	background: url(<%= asset_path('pork.png') %>) no-repeat center
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: 50% auto

	&:hover
		background-color: #de64af
		transition: background-color .3s ease-out
		-webkit-transition: background-color .3s ease-out
		-moz-transition: background-color .3s ease-out
		-ms-transition: background-color .3s ease-out
		color: $white

[data-search-id="4"]
	background: url(<%= asset_path('fish.png') %>) no-repeat center
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: 50% auto

	&:hover
		background-color: #045db9
		transition: background-color .3s ease-out
		-webkit-transition: background-color .3s ease-out
		-moz-transition: background-color .3s ease-out
		-ms-transition: background-color .3s ease-out
		color: $white

[data-search-id="5"]
	background: url(<%= asset_path('pasta-2.png') %>) no-repeat center
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: 50% auto

	&:hover
		background-color: tan
		transition: background-color .3s ease-out
		-webkit-transition: background-color .3s ease-out
		-moz-transition: background-color .3s ease-out
		-ms-transition: background-color .3s ease-out
		color: $white

[data-search-id="6"]
	background: url(<%= asset_path('veggie.png') %>) no-repeat center
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: 75% auto

	&:hover
		background-color: green
		transition: background-color .3s ease-out
		-webkit-transition: background-color .3s ease-out
		-moz-transition: background-color .3s ease-out
		-ms-transition: background-color .3s ease-out
		color: $white


.about-container
	width: 100%
	min-height: 100vh
	font-family: ArchivoBold
	text-align: center
	margin: 0px
	background-color: $carbon


.about-hero
	background: url(<%= asset_path('fresh-about.png') %>) no-repeat center
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: cover
	width: 100%
	margin: 0px

.about-title
	font-size: 3em
	font-family: NexaRust
	padding: 150px 0px 100px 0px
	width: 100%
	color: $white
	margin-top: 50px
	background-color: rgba(0, 0, 0, .45)

.about-content-wrapper
	width: 100%
	text-align: center
	color: $white

.content-hero
	width: 100%
	background-color: $carbon
	border-top: 8px solid $orange
	border-bottom: 8px solid $orange

.content-hero > h1
	font-family: NexaRust
	font-size: 2em

.content-container
	color: $white
	font-size: 1.15em
	width: 60%
	margin-left: 20%
	padding: 25px 0px

.name
	font-family: NexaRust

.content-container > p
	padding: 10px 0px

p > span
	font-family: NexaRust

.source
	color: $teal

.source:hover
	-webkit-transition: color .2s ease-out
	-moz-transition: color .2s ease-out
	-ms-transition: color .2s ease-out
	transition: color .2s ease-out
	color: $orange
	cursor: pointer

.error
	background-color: red
	color: white
	font-size: 1.5em
	width: 100%
	padding: 30px 0px


/* Media Queries */

@media (max-width: 992px)

	.home-hero-wrapper
		padding: 125px 0px 50px 0px
		margin-top: 25px

	.hero-title
		font-size: 2.5em

	.about-container
		margin-top: -50px

	.error
		font-size: 2em
