@import "application"

.search-container
	width: 100%
	min-height: 100vh
	padding: 0px

.search-wrapper
	margin: 25px 0px 0px 0px
	background: url(<%= asset_path('fresh-search.png') %>) no-repeat center
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: cover
	text-align: center
	font-size: 16pt

.search-page-title
	text-align: center
	font-size: 1.75em
	font-weight: 600
	margin: 0px
	font-family: NexaRust
	color: $white
	padding-top: 300px
	background-color: rgba(0, 0, 0, .45)

.search-bar
	padding: 50px 0px 450px 0px
	width: 100%
	color: $carbon
	font-size: 1.25em
	background-color: rgba(0, 0, 0, .45)

.search-grid
	font-size: 8pt
	color: $white
	text-align: center
	height: 250px
	border: 1px solid $white

.search-break
	width: 100%
	height: 15px
	background-color: $orange
	border: 1px solid $carbon

.search-cover
	width: 100%
	height: 100%
	padding-top: 75px
	color: $white
	font-size: 8pt
	margin: 0px
	background-color: rgba(0, 0, 0, .5)

.search-cover:hover
	-webkit-transition: background-color .3s ease-out
	-moz-transition: background-color .3s ease-out
	-ms-transition: background-color .3s ease-out
	transition: background-color .3s ease-out
	background-color: rgba(0, 0, 0, .15)

.search-grid:hover
	border: 3px solid $teal


/* Media Queries */

@media (max-width: 992px)

	.search-container
		border: none

	.search-page-title
		font-size: 1em
		padding-top: 100px

	.search-bar
		font-size: .95em





