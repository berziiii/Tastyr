$black: #000
$white: #fff
$teal: #1abc9c
$carbon: #2D383C
$orange: #FEA115
$light-blue: #78B5C7
$blue: #4596AB
$dark-blue: #146C82

.glyphicons
	position: relative
	top: 1px
	display: inline-block
	font-family: 'Glyphicons-Regular'
	font-style: normal
	font-weight: normal
	line-height: 1
	vertical-align: top
	speak: none
	-webkit-font-smoothing: antialiased

.glyphicons-menu-hamburger:before
	content: "\E517"

.hide
	display: none

.show
	display: visible

.row
	margin: 0px

a
	text-decoration: none
	color: $carbon
	cursor: pointer

a:hover
	text-decoration: none
	transition: color .2s ease-out
	color: $teal

body
	font-size: 16pt
	color: $carbon
	background-color: $carbon
	margin: 0px
	font-family: ArchivoBold

.navigation-bar
	background-color: rgba(255, 255, 255, 1)
	font-size: .9em
	position: fixed
	top: 0px
	font-weight: 600
	color: $carbon
	width: 100%
	padding: 10px 0px
	margin: 0px
	font-family: NexaRustSans
	border-bottom: 2px solid $teal
	z-index: 100

.logo
	left: 5%
	font-size: 1.25em
	padding: 5px 20px 0px 20px
	font-family: NexaRust

.R
	color: $orange
	font-family: NexaRust

.nav-links
	display: inline
	float: right


.nav-link
	color: $carbon
	float: left
	font-size: .65em
	padding: 12px 20px 0px 20px

.sign-in
	color: $carbon
	padding: 5px 10px
	float: left
	font-size: .95em
	margin-left: 20px
	border-radius: 2px
	border: solid 1px $carbon

.sign-in:hover, .sign-in a:hover
	background-color: $teal
	transition: background-color .2s ease-out
	cursor: pointer
	color: $white

.search
	font-size: 1.5em

.modal-dialog
	margin-top: 15%

.modal-content
	background-color: rgba(0, 0, 0, .8)
	border: 1px solid $white
	text-align: center
	color: $white
	font-size: 1em

#nav-hamburger
	display: none
	color: $carbon
	font-size: 1.5em
	position: absolute
	right: 20px
	top: 2px

.responsive-menu
	width: 100%
	text-align: center
	margin-top: 40px
	padding: 0px
	margin-bottom: -25px

.responsive-nav-links
	color: $carbon
	width: 100%
	background-color: $white

.responsive-nav-link, .responsive-sign-in
	color: $carbon
	font-size: 1.25em
	border: 2px solid $teal
	width: 100%
	display: block
	padding: 20px 0px

/* Applicaiton Styles */

.footer-container
	width: 100%
	color: $carbon
	background-color: rgba(255, 255, 255, 1)
	text-align: center
	padding: 2px 0px
	margin: 0px
	font-weight: 700

.footer-title
	font-size: .8em

.active
	color: $orange

/* Media Queries */

@media (max-width: 1050px)

	.nav-links
		font-size: .9em

@media (max-width: 992px)

	body
		font-size: 12pt

	.nav-links
		display: none

	#nav-hamburger
		display: block




