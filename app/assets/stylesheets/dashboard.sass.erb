@import "application"

.dashboard-container
	width: 100%
	min-height: 100vh

.dashboard-hero-wrapper
	width: 100%
	background: url(<%= asset_path('fresh-dashboard.png') %>) no-repeat center
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: cover
	text-align: center
	margin: 0px

.dashboard-hero
	font-family: NexaRust
	padding: 150px 0px 50px 0px
	margin: 0px
	color: $white
	background-color: rgba(0, 0, 0, .45)

.dashboard-title
	font-size: 2em

.dashboard-meal-title
	color: $white
	font-size: .95em
	margin-top: 25px

.meal-choice-container
	margin-top: 50px
	text-align: center
	margin-botton: 100px

.meal-choice-box
	background-color: rgba(0, 0, 0, .75)
	color: $white
	padding: 30px 40px
	margin: 40px 0px 100px 0px
	border: 2px solid $white

.meal-choice-box:hover
	background-color: rgba(0, 0, 0, .5)
	color: $teal

.dashboard-meal-container, .dash-board-container-5
	width: 100%
	text-align: center
	margin: 0px

.dashboard-container-5
	display: inline

.search-container
	border: 2px solid $teal

.protein-container
	font-family: NexaRust
	padding: 20px 0px
	margin: 0px
	background-color: $carbon
	color: $white
	text-align: center

.protein-container:nth-child(2)
	border-right: 1px solid $teal
	border-left: 1px solid $teal
	min-height: 150vh

.protein-container > form > input
	color: $white
	background-color: $teal
	padding: 3px 20px
	margin-top: 10px
	font-size: .75em

.form-container
	padding-bottom: 20px
	width: 100%
	border-bottom: 5px solid $teal

.go-button > input
	color: $white
	background-color: $teal
	padding: 3px 20px
	margin-top: 25px
	font-size: .75em

.meal-search-grid
	width: 100%
	margin: 0px
	margin-top: 15px
	padding: 0px

.meal-grid
	font-family: ArchivoBold
	font-size: 12pt
	position: relative
	margin-bottom: 30px

.new-recipe-button > form > input
	padding: 5px 15px
	position: absolute
	background-color: $teal
	color: $white
	top: 0px
	right: 0px
	color: $white
	font-size: .75em

.meal-cover
	width: 100%
	height: 100%
	padding: 100px 0px
	color: $white
	margin: 0px
	font-size: 1.25em
	background-color: rgba(0, 0, 0, .4)

.meal-cover > h3
	font-size: 1.25em

.ingredient-grid
	text-align: center
	padding: 50px 0px 30px 0px
	font-family: ArchivoBold
	color: $white
	font-size: 0.75em

.ingredient-grid > h4
	text-decoration: underline
	padding-bottom: 25px

.ingredient-grid > ul
	list-style-type: none
	text-align: left

.ingredient-grid > li
	padding: 5px 0px

.source-button
	padding: 10px 25px
	background-color: $teal
	color: $white
	font-family: ArchivoBold
	font-size: .65em

.source-button:hover
	color: $white
	border: 1px solid $white

.dash-spacer
	padding: 0px 10px

.dash-search-bar
	width: 100%
	font-size: .9em
	margin-top: 10px

.dash-search-bar > form > input
	margin-bottom: 10px
	color: $carbon
	width: 75%

.dash-search-bar > form > input:nth-child(4)
	background-color: $teal
	color: $white
	width: 25%
	margin-bottom: 5px

.dash-search-icon
	color: $white

.dash-search-icon:hover
	color: $teal
	-webkit-transition: color .3s ease-out
	-moz-transition: color .3s ease-out
	-ms-transition: color .3s ease-out
	transition: color .3s ease-out



/* Media Queries */


@media (max-width: 992px)

	.dashboard-hero
		padding: 100px 0px 50px 0px
		margin-top: 25px

	.dashboard-title
		font-size: 1.75em
		padding: 0px 15px

	.dashboard-meal-title
		font-size: 0.85em
		margin-top: 25px
		padding: 0px 15px

	.protein-container
		padding: 10px 0px
		border-bottom: 1px solid $teal

	.protein-container:nth-child(2)
		min-height: 0%

	.protein-container > h4
		font-size: .95em

	.go-button
		font-size: 1.25em

	.meal-cover
		padding: 75px 0px

	.meal-cover > h3
		font-size: 1.15em

	.source-button
		padding: 10px 25px
		font-size: 0.9em

	.ingredient-grid
		padding: 30px 0px 30px 0px
		font-size: 1em

	.ingredient-grid > ul
		padding: 0px
		text-align: center





