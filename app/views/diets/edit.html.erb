<div class="profile-container">
	<div class="profile-wrapper">
		<h1 class="profile-title">Create a new Profile</h1>

		<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12 profile-column">
			<%= form_for @diet do |d| %>
			<fieldset>
				<h1 class="profile-form-title">Diets</h1>

				<% @diet.each do |e| %>
					<div class="profile-radio-field">
						<%= check_box_tag :diet, e.name %> <%= e.name %>
					</div>
				<% end %>

			</fieldset>
			<div class="create-profile">
			<%= f.submit :value => "Next" %>
			<% end %>
			</div>
		</div>
	</div>
</div>