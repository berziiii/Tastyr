<div class="user-container">
  <h2 class="edit-title">Edit Tasty<span class="R">r</span> Account</h2>

  <div class="edit-user-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, :class => "field-label" %><br />
        <%= f.email_field :email, autofocus: true, :class => "field-input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, :value => "New Password", :class => "field-label" %> <i><br />(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off", :class => "field-input" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, :value => "New Password Confirmation", :class => "field-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "field-input" %>
      </div>

      <div class="field">
        <%= f.label :current_password, :class => "field-label" %> <i><br />(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", :class => "field-input" %>
      </div>

      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>
  </div>

  <div class="back">
    <%= link_to "Back", :back, :class => "back" %>
  </div>

  <!-- <h2>We'd hate to see you go. </h2> <#%= button_to "Cancel my account", user_registration_path(resource_name),  data: { confirm: "Are you sure?" }, method: :delete %> -->

</div>
