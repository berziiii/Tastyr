<div class="user-container">
 <h2 class="sign-up-title">Sign up for Tasty<span class="R">r</span></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="error-message">
  <%= devise_error_messages! %>
  </div>

  <div class="sign-up-field">
    <%= f.email_field :email, autofocus: true, :placeholder => "User Email" %>
  </div>

  <div class="sign-up-field">
    <% if @minimum_password_length %>
    <em class="error">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password"  %>
  </div>

  <div class="sign-up-field">
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

</div>